{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "buildcppname",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-I",
                "${workspaceFolder}/include/",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/output/${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/g++"
        }
    ],
    "version": "2.0.0"
}